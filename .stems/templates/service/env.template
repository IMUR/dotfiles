# Service Environment Variables Template
# Copy this file to .env and configure for your environment

# Service Configuration
SERVICE_NAME=myservice
SERVICE_IMAGE=nginx:latest
SERVICE_PORT=8080
SERVICE_ENV=production

# Node Information (usually auto-detected)
HOSTNAME=${HOSTNAME}
NODE_IP=${NODE_IP}

# Resource Limits
CPU_LIMIT=1.0
CPU_RESERVATION=0.5
MEMORY_LIMIT=512M
MEMORY_RESERVATION=256M

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Database Configuration
DB_NAME=servicedb
DB_USER=serviceuser
DB_PASSWORD=changeme  # CHANGE THIS IN PRODUCTION!

# Paths (create these directories before deploying)
DATA_PATH=./data/service
LOG_PATH=./logs/service
CACHE_PATH=./data/cache
DB_PATH=./data/database

# Timezone
TZ=UTC

# Feature Flags
ENABLE_DEBUG=false
ENABLE_METRICS=true
ENABLE_HEALTHCHECK=true

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your-api-key-here  # CHANGE THIS!

# Monitoring
METRICS_PORT=9090
METRICS_PATH=/metrics

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# Security
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Custom Application Variables
# Add your application-specific variables below
APP_SECRET_KEY=change-this-secret-key  # CHANGE THIS!
APP_DEBUG_MODE=false
APP_MAX_CONNECTIONS=100
