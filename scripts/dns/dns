#!/usr/bin/env bash
# Quick wrapper for DNS manager - auto-loads credentials
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"
ENV_FILE="$PROJECT_ROOT/.env.godaddy"

# Load credentials if available
if [[ -f "$ENV_FILE" ]]; then
    # shellcheck disable=SC1090
    source "$ENV_FILE"
fi

# Run the DNS manager
exec "$SCRIPT_DIR/godaddy-dns-manager.sh" "$@"

