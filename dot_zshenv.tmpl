# ~/.zshenv - sourced for ALL zsh shells
# Ensures PATH works for: interactive, non-interactive, login, non-login, scripts, SSH commands

# 1. Base Environment (System + Cargo + Brew)
# Cargo
[[ -f "$HOME/.cargo/env" ]] && . "$HOME/.cargo/env"
# Homebrew
[[ -x /opt/homebrew/bin/brew ]] && eval "$(/opt/homebrew/bin/brew shellenv)"

# 2. Path Prioritization (Last prepend wins)
typeset -U PATH

# Low Priority (Legacy)
PATH="$HOME/go/bin:$PATH"
PATH="$HOME/.bun/bin:$PATH"

# High Priority (Local)
PATH="$HOME/.local/bin:$PATH"

# Highest Priority (Mise Managed)
PATH="$HOME/.local/share/mise/shims:$PATH"

export PATH