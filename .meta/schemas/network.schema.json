{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://crtr-config/schemas/network.schema.json",
  "title": "Network Configuration",
  "description": "Schema for network configuration on cooperator",
  "type": "object",
  "properties": {
    "network": {
      "type": "object",
      "required": ["interface", "dns"],
      "properties": {
        "interface": {
          "type": "object",
          "required": ["name", "ip", "gateway"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^(eth|wlan|enp|wlp)[0-9a-z]+$",
              "description": "Network interface name"
            },
            "ip": {
              "type": "string",
              "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
              "description": "IP address with CIDR notation"
            },
            "gateway": {
              "type": "string",
              "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$",
              "description": "Default gateway IP"
            },
            "mac": {
              "type": "string",
              "pattern": "^([0-9A-F]{2}:){5}[0-9A-F]{2}$",
              "description": "MAC address"
            }
          }
        },
        "dns": {
          "type": "object",
          "required": ["client", "server"],
          "properties": {
            "client": {
              "type": "object",
              "required": ["nameserver"],
              "properties": {
                "nameserver": {
                  "type": "string",
                  "description": "DNS nameserver IP"
                },
                "config_file": {
                  "type": "string",
                  "default": "/etc/resolv.conf",
                  "description": "DNS client config file"
                }
              }
            },
            "server": {
              "type": "object",
              "required": ["type", "bind", "upstream"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["pihole", "dnsmasq", "bind9"],
                  "description": "DNS server type"
                },
                "bind": {
                  "type": "string",
                  "pattern": "^(0\\.0\\.0\\.0|127\\.0\\.0\\.1|([0-9]{1,3}\\.){3}[0-9]{1,3})$",
                  "description": "DNS bind address"
                },
                "port": {
                  "type": "integer",
                  "default": 53,
                  "minimum": 1,
                  "maximum": 65535
                },
                "upstream": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$"
                  },
                  "description": "Upstream DNS servers"
                },
                "local_overrides": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["domain", "ip"],
                    "properties": {
                      "domain": {
                        "type": "string",
                        "description": "Domain to override"
                      },
                      "ip": {
                        "type": "string",
                        "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$",
                        "description": "IP to resolve to"
                      }
                    }
                  },
                  "description": "Local DNS overrides for split-horizon DNS"
                },
                "config_dir": {
                  "type": "string",
                  "description": "DNS server config directory"
                }
              }
            }
          }
        },
        "ddns": {
          "type": "object",
          "description": "Dynamic DNS configuration",
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["duckdns", "noip", "cloudflare", "custom"],
              "description": "DDNS provider"
            },
            "domain": {
              "type": "string",
              "description": "DDNS domain"
            },
            "token": {
              "type": "string",
              "description": "DDNS token (reference to secret)"
            },
            "update_script": {
              "type": "string",
              "description": "Path to update script"
            },
            "cron_schedule": {
              "type": "string",
              "pattern": "^[\\*0-9,\\-/]+\\s+[\\*0-9,\\-/]+\\s+[\\*0-9,\\-/]+\\s+[\\*0-9,\\-/]+\\s+[\\*0-9,\\-/]+.*$",
              "description": "Cron schedule for updates"
            },
            "log_file": {
              "type": "string",
              "description": "Log file path"
            }
          }
        },
        "external": {
          "type": "object",
          "description": "External access configuration",
          "properties": {
            "public_ip": {
              "type": "string",
              "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$",
              "description": "Public IP address (if static)"
            },
            "ddns_hostname": {
              "type": "string",
              "description": "Dynamic DNS hostname"
            },
            "port_forwards": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["port", "protocol", "destination"],
                "properties": {
                  "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "protocol": {
                    "type": "string",
                    "enum": ["tcp", "udp", "both"]
                  },
                  "destination": {
                    "type": "string",
                    "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}:[0-9]{1,5}$",
                    "description": "Destination IP:port"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              },
              "description": "Port forwarding rules (documented, not enforced)"
            }
          }
        },
        "cluster": {
          "type": "object",
          "description": "Cluster network configuration",
          "required": ["subnet"],
          "properties": {
            "subnet": {
              "type": "string",
              "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
              "description": "Cluster network subnet"
            },
            "nodes": {
              "type": "object",
              "patternProperties": {
                "^[a-z0-9-]+$": {
                  "type": "string",
                  "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$",
                  "description": "Node IP address"
                }
              },
              "description": "Cluster node IPs"
            }
          }
        },
        "nfs": {
          "type": "object",
          "description": "NFS exports configuration",
          "properties": {
            "exports": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["path", "clients"],
                "properties": {
                  "path": {
                    "type": "string",
                    "description": "Export path"
                  },
                  "clients": {
                    "type": "string",
                    "description": "Client specification (e.g., 192.168.254.0/24)"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "default": ["rw", "sync", "no_subtree_check", "no_root_squash"],
                    "description": "NFS export options"
                  }
                }
              }
            },
            "config_file": {
              "type": "string",
              "default": "/etc/exports",
              "description": "NFS exports config file"
            }
          }
        }
      }
    }
  },
  "required": ["network"]
}
