{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://crtr-config/schemas/service.schema.json",
  "title": "Service Definition",
  "description": "Schema for defining services running on cooperator",
  "type": "object",
  "properties": {
    "services": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "required": ["type", "enabled"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["systemd", "docker-compose", "binary"]
            },
            "enabled": {
              "type": "boolean"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "bind": {
              "type": "string",
              "pattern": "^(127\\.0\\.0\\.1|0\\.0\\.0\\.0|192\\.168\\.254\\.[0-9]{1,3})$"
            },
            "binary": {
              "type": "string",
              "description": "Path to binary for systemd/binary type services"
            },
            "unit_file": {
              "type": "string",
              "description": "Path to systemd unit file"
            },
            "compose_file": {
              "type": "string",
              "description": "Path to docker-compose.yml"
            },
            "image": {
              "type": "string",
              "description": "Docker image name"
            },
            "data": {
              "type": "string",
              "description": "Data directory path"
            },
            "config": {
              "type": "string",
              "description": "Configuration file path"
            },
            "user": {
              "type": "string",
              "description": "User to run service as"
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Services this depends on"
            },
            "env_file": {
              "type": "string",
              "description": "Environment file path"
            },
            "restart": {
              "type": "string",
              "enum": ["always", "on-failure", "unless-stopped", "no"]
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "systemd" } }
              },
              "then": {
                "required": ["binary", "unit_file"]
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "docker-compose" } }
              },
              "then": {
                "required": ["compose_file"]
              }
            }
          ]
        }
      }
    }
  },
  "required": ["services"]
}
