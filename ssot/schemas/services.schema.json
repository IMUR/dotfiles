{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://crtr-config/schemas/services.schema.json",
  "title": "Services Configuration Schema",
  "description": "Schema for service definitions",
  "type": "object",
  "required": ["services"],
  "properties": {
    "services": {
      "type": "object",
      "patternProperties": {
        "^[a-z][a-z0-9-]*$": {
          "type": "object",
          "required": ["type", "enabled"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["systemd", "docker", "docker-compose"],
              "description": "Service runtime type"
            },
            "enabled": {
              "type": "boolean",
              "description": "Whether service should be enabled"
            },
            "binary": {
              "type": "string",
              "pattern": "^/",
              "description": "Absolute path to binary"
            },
            "unit_file": {
              "type": "string",
              "description": "Systemd unit file path or 'package' for package-provided units"
            },
            "config": {
              "type": "string",
              "description": "Configuration file or directory path"
            },
            "compose_file": {
              "type": "string",
              "pattern": "^/",
              "description": "Path to docker-compose.yml"
            },
            "image": {
              "type": "string",
              "description": "Docker image (for docker-compose services)"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "description": "Primary service port"
            },
            "bind": {
              "type": "string",
              "pattern": "^(0\\.0\\.0\\.0|127\\.0\\.0\\.1|[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3})$",
              "description": "Bind address for service"
            },
            "data": {
              "type": "string",
              "pattern": "^/",
              "description": "Data directory path"
            },
            "env_file": {
              "type": "string",
              "pattern": "^/",
              "description": "Environment file path"
            },
            "user": {
              "type": "string",
              "pattern": "^[a-z_][a-z0-9_-]*$",
              "description": "User to run service as"
            },
            "restart": {
              "type": "string",
              "enum": ["no", "on-failure", "always", "unless-stopped"],
              "description": "Restart policy"
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9-]*$"
              },
              "description": "Service dependencies"
            }
          },
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "systemd" } }
              },
              "then": {
                "required": ["binary", "unit_file", "restart"]
              }
            },
            {
              "if": {
                "properties": { "type": { "const": "docker-compose" } }
              },
              "then": {
                "required": ["compose_file", "image"]
              }
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
