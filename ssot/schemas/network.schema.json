{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://crtr-config/schemas/network.schema.json",
  "title": "Network Configuration Schema",
  "description": "Schema for network configuration",
  "type": "object",
  "required": ["network"],
  "properties": {
    "network": {
      "type": "object",
      "required": ["interface", "dns", "cluster"],
      "properties": {
        "interface": {
          "type": "object",
          "required": ["name", "ip", "gateway", "mac"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9]*$",
              "description": "Network interface name"
            },
            "ip": {
              "type": "string",
              "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]{1,2}$",
              "description": "IP address with CIDR notation"
            },
            "gateway": {
              "type": "string",
              "format": "ipv4",
              "description": "Default gateway IP"
            },
            "mac": {
              "type": "string",
              "pattern": "^([0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}$",
              "description": "MAC address"
            }
          }
        },
        "dns": {
          "type": "object",
          "required": ["client", "server"],
          "properties": {
            "client": {
              "type": "object",
              "required": ["nameserver", "config_file"],
              "properties": {
                "nameserver": {
                  "type": "string",
                  "format": "ipv4"
                },
                "config_file": {
                  "type": "string",
                  "pattern": "^/"
                }
              }
            },
            "server": {
              "type": "object",
              "required": ["type", "bind", "port", "upstream", "config_dir"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["pihole", "dnsmasq", "bind9", "unbound"]
                },
                "bind": {
                  "type": "string",
                  "pattern": "^(0\\.0\\.0\\.0|127\\.0\\.0\\.1|[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3})$"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                },
                "upstream": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "format": "ipv4"
                  }
                },
                "local_overrides": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["domain", "ip"],
                    "properties": {
                      "domain": {
                        "type": "string",
                        "format": "hostname"
                      },
                      "ip": {
                        "type": "string",
                        "format": "ipv4"
                      }
                    }
                  }
                },
                "config_dir": {
                  "type": "string",
                  "pattern": "^/"
                }
              }
            }
          }
        },
        "ddns": {
          "type": "object",
          "required": ["provider", "domain", "token"],
          "properties": {
            "provider": {
              "type": "string",
              "enum": ["duckdns", "cloudflare", "route53", "godaddy"]
            },
            "domain": {
              "type": "string",
              "format": "hostname"
            },
            "token": {
              "type": "string",
              "minLength": 1,
              "description": "DDNS API token (should be secured!)"
            },
            "update_script": {
              "type": "string",
              "pattern": "^[~/]"
            },
            "cron_schedule": {
              "type": "string",
              "pattern": "^(@(annually|yearly|monthly|weekly|daily|hourly|reboot))|(@every (\\d+(ns|us|Âµs|ms|s|m|h))+)|((((\\d+,)+\\d+|(\\d+([/-])\\d+)|\\d+|\\*) ?){5,7})$"
            },
            "log_file": {
              "type": "string",
              "pattern": "^[~/]"
            }
          }
        },
        "external": {
          "type": "object",
          "required": ["public_ip"],
          "properties": {
            "public_ip": {
              "type": "string",
              "format": "ipv4"
            },
            "ddns_hostname": {
              "type": "string",
              "format": "hostname"
            },
            "port_forwards": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["port", "protocol", "destination", "description"],
                "properties": {
                  "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "protocol": {
                    "type": "string",
                    "enum": ["tcp", "udp", "both"]
                  },
                  "destination": {
                    "type": "string",
                    "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}:[0-9]{1,5}$"
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "cluster": {
          "type": "object",
          "required": ["subnet", "nodes"],
          "properties": {
            "subnet": {
              "type": "string",
              "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]{1,2}$"
            },
            "nodes": {
              "type": "object",
              "patternProperties": {
                "^[a-z][a-z0-9-]*$": {
                  "type": "string",
                  "format": "ipv4"
                }
              },
              "minProperties": 1
            }
          }
        },
        "nfs": {
          "type": "object",
          "required": ["exports", "config_file"],
          "properties": {
            "exports": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["path", "clients", "options"],
                "properties": {
                  "path": {
                    "type": "string",
                    "pattern": "^/"
                  },
                  "clients": {
                    "type": "string",
                    "pattern": "^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}/[0-9]{1,2}$"
                  },
                  "options": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "enum": ["rw", "ro", "sync", "async", "no_subtree_check", "subtree_check", "no_root_squash", "root_squash", "all_squash"]
                    }
                  }
                }
              }
            },
            "config_file": {
              "type": "string",
              "pattern": "^/"
            }
          }
        }
      }
    }
  }
}
